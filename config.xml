<?xml version='1.0' encoding='utf-8'?>
<widget id="com.milord.warsim" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>WarSim</name>
    <description>
        A War Simulation Mobile Game using Cordova
    </description>
    <author email="immunitygame@gmail.com" href="http://github.com/sciencefreak500">
        Michael Milord
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="browser" spec="^6.0.0" />
    <engine name="ios" spec="^5.0.1" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
</widget>
